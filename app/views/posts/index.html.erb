<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to 'New Post', new_post_path, class:'btn btn-success pull-right' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-xs-4">Name</th>
      <th class="col-xs-4">Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', post, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' }  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


